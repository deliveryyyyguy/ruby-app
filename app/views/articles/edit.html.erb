<h1>Edit existing</h1>

<% if @article.errors.any? %>

<h2>Errors prevented article</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg%></li>
  <% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>
	<p>
		<%= f.label :title %><br/>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :desription %><br/>
		<%= f.text_area :description %>
	</p>

	<p>
		<%= f.submit :submit %>
	</p>

<% end %>

<%= link_to "Back to articles", articles_path %>